{% extends "base.twig" %}

{% block content %}

<section class="section post-type-{{ post.post_type }}" id="post-{{ post.ID }}">

	<ul class="cdf">
		<li><a href="/">{{svg('home')}}</a></li>
		<li><a href="/blog">Le Blog</a></li>
		<li><a href="{{ post.link }}">{{ post.title }}</a></li>
	</ul>
	<h1 class="grand-titre"> {{ post.title }}</h1>
	<div class="chapo">{{ post.description }}</div>
	<figure>
		<img src="{{ post.thumbnail.src('large') }}">
	</figure>
	<p class="auteur">
		<span>Par</span><strong> {{ post.author.name }} </strong><span>&bull;</span> <time
			datetime="{{ post.date|date('Y-m-d H:i:s') }}">{{ post.date }}</time>
	</p>
	<div class="content">
		{{post.content}}
	</div>
	<div>
		<a href="/blog" class="bouton">Retour aux articles du blog</a>
	</div>
	{% include 'home/posts.twig' with {posts : posts_last_4, titre : 'Nos autres articles', description : '' ,
	exclude:post.id}%}
</section>

{% endblock %}