{% extends "base.twig" %}

{% block content %}

<section class="section post-type-{{ post.post_type }}" id="post-{{ post.ID }}">

	<h1 class="grand-titre"> {{ post.title }}</h1>
	<div class="chapo">{{ post.description }}</div>
	<figure>
		<img src="{{ post.thumbnail.src('large') }}">
	</figure>
	<p class="auteur">
		<span>Par</span><strong> {{ post.author.name }} </strong><span>&bull;</span> <time
			datetime="{{ post.date|date('Y-m-d H:i:s') }}">{{ post.date }}</time>
	</p>
	<div class="content">
		{{post.content}}
	</div>
	{% include 'home/posts.twig' with {posts : posts_last_4, titre : 'Nos autres articles de blog', description : '' , exclude:post.id}%}
</section>

{% endblock %}