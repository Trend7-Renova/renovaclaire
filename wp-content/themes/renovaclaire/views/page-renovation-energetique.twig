{% extends "base.twig" %}
{% block blockHero %}
	{% if hero %}
		{% include 'partial/hero-large.twig' %}
	{% endif %}
{% endblock %}


{% block content %}
	<section class="section">

		{% if not hero %}

			<h1 class="grand-titre">
				{{ post.title }}
			</h1>
			<div class="chapo">{{ post.description }}</div>

		{% endif %}
	</section>

	{% include 'home/profile.twig' with {data:post.meta('profile')} %}

	{% include 'home/avantages.twig' %}


	{% if post.meta('solutions') %}
		{% include 'home/cards.twig' with {data:{surtitre:'NOS SOLUTIONS',cards:post.meta('solutions')}} %}
	{% endif %}
	{% if post.meta('etapes') %}
		{% include 'home/etapes.twig' with {data:post.meta('etapes')} %}
	{% endif %}

	<div class="content">
		{{post.content}}
	</div>

	{% include 'home/text-wide.twig' with {data:home.rendez_vous} %}

{% endblock %}
